HostKey /factory/ssh/ssh_host_rsa_key
HostKey /factory/ssh/ssh_host_ecdsa_key
HostKey /factory/ssh/ssh_host_ed25519_key

# Authentication:
PermitRootLogin yes
PubkeyAuthentication yes
AuthorizedKeysFile /factory/ssh/authorized_keys
PasswordAuthentication yes
PermitEmptyPasswords yes

# override default of no subsystems
Subsystem sftp /usr/libexec/sftp-server

# X11 display forward by default
X11Forwarding yes
X11DisplayOffset 10
X11UseLocalhost yes
